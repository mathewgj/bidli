<h1>New item</h1>

<% form_for(@item, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>
  <p>
    
    <%= f.hidden_field :seller, :value => current_user.login %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :startingbid %><br />
    <%= f.text_field :startingbid %>
  </p>
  <p>
    <%= f.label :enddate %><br />
    <%= f.text_field :enddate %>
  </p>
  <p>
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>




<%= link_to 'Back', items_path %>